@import "../../common/vendor.wxss";

.page-body {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
}
.nav-left {
  width: 20%;
}
.nav-left-item {
  height: 100rpx;
  border-right: solid 1px #E0E0E0;
  border-bottom: solid 1px #E0E0E0;
  font-size: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.nav-right {
  width: 80%;
}
.nav-right-item {
  width: 30%;
  float: left;
  text-align: center;
  padding: 10rpx;
  font-size: 28rpx;
}
.nav-right-item image {
  width: 100%;
  height: 226rpx;
}
.active {
  color: #007AFF;
}